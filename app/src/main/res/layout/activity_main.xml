<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciprofil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_solat"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:layout_below="@id/ciprofil"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/jadwal_sholat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardElevation="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_rounded"/>

            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_jadwal_solat"
            android:layout_gravity="right"/>

            <TextView
                android:id="@+id/tv_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Jadwal Sholat"
                android:textColor="#123456"
                android:textSize="30sp"
                app:fontFamily="@font/aladin" />


        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/produk"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_rounded"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_produk_halal"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/tv_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Produk Halal"
            android:textColor="#123456"
            android:textSize="30sp"
            app:fontFamily="@font/aladin" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/asmaulhusna"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_rounded"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/asmaul_husna"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/tv_asmaulhusna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Asmaul Husna"
            android:textColor="#123456"
            android:textSize="30sp"
            app:fontFamily="@font/aladin" />

    </androidx.cardview.widget.CardView>

</LinearLayout>